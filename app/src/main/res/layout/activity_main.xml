    <com.agsw.FabricView.FabricView
            android:id="@+id/layout_actionEditorCanvasView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
    </com.agsw.FabricView.FabricView>

    <com.mercku.layouthouse.MyHouseView
            android:id="@+id/layout_scrollview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
    </com.mercku.layouthouse.MyHouseView>
    <TextView
            android:id="@+id/text_tap_to_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="菜单"
            android:padding="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
            android:id="@+id/layout_left_side"
            android:layout_width="80dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_tap_to_add"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            android:orientation="vertical"
            android:background="#f1f1f1">
        <Button
                android:id="@+id/text_add_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新增房间"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:id="@+id/text_remove_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="移除房间"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:id="@+id/text_rename_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重新命名"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:id="@+id/text_zoom_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="缩小"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:id="@+id/text_zoom_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="放大"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:id="@+id/text_reset_zoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="恢复大小"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>